{
  "manifest_version": 3,
  "name": "Markdown内容提取器",
  "version": "3.0",
  "description": "一键提取网页核心内容，支持选择性抓取子页面，智能过滤广告和公告，输出简洁Markdown。现在支持页面非中文内容翻译使用Gemini 2.5 Flash模型。",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://openrouter.ai/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["turndown.js", "content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
